<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.goprasoft.dvb.tv"
    android:installLocation="auto"
    android:versionCode="11"
    android:versionName="3.1.6" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.HARDWARE_TEST"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_FORMAT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <application
        android:icon="@drawable/ic_launcher11111"
        android:label="@string/app_name" >
        <activity android:name="com.chrulri.droidtv.ChannelsActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chrulri.droidtv.PreferencesActivity"
            android:label="@string/preferences_name"
            android:launchMode="standard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chrulri.droidtv.ScanActivity"
            android:label="@string/scan_name" >
        </activity>
        <activity
            android:name="com.chrulri.droidtv.StreamActivity"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>